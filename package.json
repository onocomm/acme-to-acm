{
  "name": "acme-to-acm",
  "version": "1.0.0",
  "description": "ACME protocol certificate renewal system with automatic ACM import using Certbot on AWS Lambda",
  "bin": {
    "acme-to-acm": "bin/acme-to-acm.js"
  },
  "scripts": {
    "build": "tsc && npm run build:lambda",
    "watch": "tsc -w",
    "cdk": "cdk",
    "build:lambda": "cd lambda && npm run build",
    "test": "jest",
    "postinstall": "cd lambda && npm install",
    "deploy": "npm run build && cdk deploy",
    "synth": "npm run build && cdk synth",
    "diff": "npm run build && cdk diff"
  },
  "keywords": [
    "acme",
    "certbot",
    "aws",
    "lambda",
    "acm",
    "route53",
    "jprs",
    "letsencrypt",
    "ssl",
    "certificate"
  ],
  "author": "Onocom Co., Ltd.",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "aws-cdk": "^2.170.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
